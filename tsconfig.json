{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["./*"],
      "~src/*": ["./src/*"]
    },
    "strict": true,
    "alwaysStrict": true,
    "typeRoots": [
      "./src/types"
    ]
  },
  "include": [
    "./src/**/*.vue",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/plugins/*"
  ]
}
